  <p>
    <strong>Volume:</strong>
    <%= @book.volume %>
  </p>
<% end %>

<% if not @book.series.empty? %>
  <p>
    <strong>Series:</strong>
    <%= @book.series %>
  </p>
<% end %>

<% if not @book.address.empty? %>
  <p>
    <strong>Address:</strong>
    <%= @book.address %>
  </p>
<% end %>

<% if not @book.edition.empty? %>
  <p>
    <strong>Edition:</strong>
    <%= @book.edition %>
  </p>
<% end %>

<% if not @book.month.empty? %>
  <p>
    <strong>Month:</strong>
    <%= @book.month %>
  </p>
<% end %>

<% if not @book.note.empty? %>
  <p>
    <strong>Note:</strong>
    <%= @book.note %>
  </p>
<% end %>
<% if not @book.key.empty? %>
  <p>
    <strong>Key:</strong>
    <%= @book.key %>
  </p>
<% end %>
